@page
@model Pages.BackOffice.BackofficeModel
@{
    ViewData["Title"] = "Game History";
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
}

<h2>Game History</h2>

<form method="get" class="filter-container">
    <p>
        <label for="SearchString">Filtrer par nom:</label>
        <input type="text" name="SearchString" id="SearchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Appliquer" />
        <a asp-page="./Index">Annuler le filtre</a>
    </p>
</form>
<nav>
    <ul class="pagination">
        <!-- Previous Page Link -->
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            @if (Model.HasPreviousPage)
            {
                <a class="page-link"
                   asp-route-SortOrder="@Model.CurrentSort"
                   asp-route-SearchString="@Model.CurrentFilter"
                   asp-route-PageIndex="@(Model.PageIndex - 1)">
                    &laquo; Précédent
                </a>
            }
            else
            {
                <span class="page-link disabled">&laquo; Précédent</span>
            }
        </li>

        <!-- Back to First Page Link -->
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            @if (Model.HasPreviousPage)
            {
                <a class="page-link"
                   asp-route-SortOrder="@Model.CurrentSort"
                   asp-route-SearchString="@Model.CurrentFilter"
                   asp-route-PageIndex="1">
                    Première page
                </a>
            }
            else
            {
                <span class="page-link disabled">Première page</span>
            }
        </li>

        <!-- Current Page Indicator -->
        <li class="page-item disabled">
            <span class="page-link">Page @Model.PageIndex</span>
        </li>

        <!-- Next Page Link -->
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            @if (Model.HasNextPage)
            {
                <a class="page-link"
                   asp-route-SortOrder="@Model.CurrentSort"
                   asp-route-SearchString="@Model.CurrentFilter"
                   asp-route-PageIndex="@(Model.PageIndex + 1)">
                    Suivant &raquo;
                </a>
            }
            else
            {
                <span class="page-link disabled">Suivant &raquo;</span>
            }
        </li>
    </ul>
</nav>

<table class="table">
    <thead>
    <tr>
        <th>Nom</th>
        <th>
            <a asp-page="./Index"
               asp-route-SortOrder="@Model.DateSort"
               asp-route-SearchString="@Model.CurrentFilter">
                Date @(Model.CurrentSort == "date_asc" ? "↑" : Model.CurrentSort == "date_desc" ? "↓" : "-")
            </a>
        </th>
        <th>Jeu</th>
        <th>
            <a asp-page="./Index"
               asp-route-SortOrder="@Model.BetSort"
               asp-route-SearchString="@Model.CurrentFilter">
                Pari @(Model.CurrentSort == "bet_asc" ? "↑" : Model.CurrentSort == "bet_desc" ? "↓" : "-")
            </a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-route-SortOrder="@Model.GainSort"
               asp-route-SearchString="@Model.CurrentFilter">
                Gain @(Model.CurrentSort == "gain_asc" ? "↑" : Model.CurrentSort == "gain_desc" ? "↓" : "-")
            </a>
        </th>
        <th>Actions</th> 
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GameHistory)
    {
        <tr>
            <td><a asp-page="/BackOffice/User" asp-route-username="@item.Username">@item.Username</a></td>
            <td>@item.Date.ToString("g")</td>
            <td>@item.Game</td>
            <td>@item.Bet</td>
            <td>@item.Gain</td>
            <td>
                @if (item.IsCancelled)
                {
                    <span>[ Annulé ]</span>
                }
                else
                {
                    <form method="post" asp-page-handler="Cancel">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Annuler transaction</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

